    function onItemSelect(query) {
        var siteRootUrl = '@Url.Content("~/")';
        window.location.href = siteRootUrl + 'Home/QuestionAutocomplete/' + query;
    }

    $(function () {
        $("#question").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/Home/QuestionAutocomplete", type: "POST", dataType: "json",
                    data: { searchTerm: request.term, maxResults: 10 },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return {
                                label: item.title,
                                value: item.title
                            };
                        }))
                    }
                })
            },
            messages: {
                noResults: "", results: ""
            }
        });
});
</script>