@model IEnumerable<StackUnderflow.Models.QuestionViewModel>

@{
    ViewBag.Title = "Home Page";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
            </hgroup>
            <p>
                This is our StackUnderflow Page. Questions and Answers can be posted here. Enjoy!
            </p>
        </div>
    </section>
}
<table>
    <tr>
        <td style="width:600px;">
            <p>@Html.ActionLink("Ask a Question", "Ask")</p>
            <h2>Questions</h2>
            @using (Html.BeginForm("Search", "Home", FormMethod.Get))
            {
                <input id="question" type="text" name="query" />
                <input id="Search" type="submit" value="Search" />
            }

            <div id="questionsPartial">
                @Html.Partial("QuestionsPartial", Model)
            </div>
        </td>
        <td style="width:300px;">
            @if (ViewBag.User != null && ViewBag.User.isAdmin)
            {
                @Html.Partial("Admin");
            }
        </td>
    </tr>
</table>

<script>
    $(document).ready(function () {
        $('#Search').click(function () {
            $.ajax({
                url: '@Url.Action("Search", "Home")',
                data: { query: $('#question').val },
                cache: false,
                type: "GET",
                dataType: "html",
                success: function (data, textStatus, XMLHttpRequest) {
                    SetData(data);
                }
            });
            function SetData(data) {
                $("#questionsPartial").html(data); // HTML DOM replace
            }
        });
    });
</script>